<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/NoteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/fragment_note_title"
            android:textSize="@dimen/fragment_note_text_view_text_size"
            />

        <TextView
            android:id="@+id/NoteDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/fragment_note_date"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/NoteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_note_text"
            android:textSize="@dimen/fragment_note_text_view_text_size2" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>